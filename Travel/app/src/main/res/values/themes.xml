<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item> <!-- 주색상 : 액션바와 버튼의 백그라운드 색상 -->
        <item name="colorPrimaryVariant">@color/white</item><!-- 그림자색 -->
        <item name="colorOnPrimary">#606060</item> <!-- 전경색, 주색상이 적용된 요소 위에 있는 요소에 적용 -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000000</item> <!-- 스위치 활성화 상태 -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- 그림자색 -->
        <item name="colorOnSecondary">@color/black</item> <!-- 스위치 활성화 상태 -->
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Travel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Travel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Travel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>